<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="es.franciscorodalf.powermine.frontend.controller.RecuperarContrasenaController"
            prefWidth="400" prefHeight="300">

    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="40" prefWidth="300"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="40">

        <Label text="Recuperar Contraseña" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <Label text="Introduce tu correo electrónico o nombre de usuario" wrapText="true" />

        <TextField fx:id="campoIdentificador" promptText="Correo o nombre de usuario" prefWidth="250" />

        <Button text="Enviar instrucciones" onAction="#manejarRecuperacion" prefWidth="180" />

        <Label fx:id="etiquetaMensaje" text="" textFill="green" visible="false" wrapText="true" />

        <Hyperlink text="Volver al inicio de sesión" onAction="#manejarIrALogin" />

    </VBox>
</AnchorPane>
