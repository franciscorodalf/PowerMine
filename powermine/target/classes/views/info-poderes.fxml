<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="es.franciscorodalf.powermine.frontend.controller.InfoPoderesController"
            prefWidth="600" prefHeight="400">

    <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
        <Label text="Guía de Poderes" 
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <ScrollPane fitToWidth="true" prefViewportHeight="300">
            <VBox spacing="15" style="-fx-padding: 10;">
                <!-- Poder: Visión -->
                <VBox styleClass="poder-seccion">
                    <Label text="👁️ Visión (Común)" 
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Text wrappingWidth="500" 
                          text="Revela una casilla segura aleatoria del tablero. Coste: 50 puntos"/>
                </VBox>

                <!-- Poder: Desminador -->
                <VBox styleClass="poder-seccion">
                    <Label text="💣 Desminador (Común)" 
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Text wrappingWidth="500" 
                          text="Elimina una mina aleatoria del tablero. Coste: 75 puntos"/>
                </VBox>

                <!-- Poder: Tsunami -->
                <VBox styleClass="poder-seccion">
                    <Label text="🌊 Tsunami (Raro)" 
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Text wrappingWidth="500" 
                          text="Limpia toda una fila del tablero, eliminando minas y revelando casillas. Coste: 100 puntos"/>
                </VBox>

                <!-- Poder: Terremoto -->
                <VBox styleClass="poder-seccion">
                    <Label text="💫 Terremoto (Raro)" 
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Text wrappingWidth="500" 
                          text="Limpia toda una columna del tablero, eliminando minas y revelando casillas. Coste: 100 puntos"/>
                </VBox>

                <!-- Poder: Escudo -->
                <VBox styleClass="poder-seccion">
                    <Label text="🛡️ Escudo (Épico)" 
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Text wrappingWidth="500" 
                          text="Protege dos casillas con minas, convirtiéndolas en casillas seguras. Coste: 150 puntos"/>
                </VBox>

                <!-- Poder: Radar -->
                <VBox styleClass="poder-seccion">
                    <Label text="📡 Radar (Épico)" 
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Text wrappingWidth="500" 
                          text="Revela temporalmente la ubicación de las minas en un área 5x5. Coste: 200 puntos"/>
                </VBox>
            </VBox>
        </ScrollPane>

        <Button text="Cerrar" onAction="#cerrarVentana"/>
    </VBox>
</AnchorPane>
